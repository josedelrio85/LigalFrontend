@model LigalFrontend.ViewModels.RecogClientesVM
@using LigalFrontend.Helpers

@{
    ViewBag.id = Model.recogidasR.ID;
    ViewBag.variable = Model.recogidasR.GetHashCode().ToString();
    var controlador = "RecogClientes";
    var controllerContent = "RecogClientes";

}

<tr id="@(ViewBag.variable)">
    @Html.HiddenFor(model => model.recogidasR.ID)
    @Html.HiddenFor(model => model.recogidasR.IDRECOGIDA)
    @Html.HiddenFor(model => model.recogidasR.ROWID)

    @Html.CustomTdFor(model => model.cliente.CODIGOC)
    @Html.CustomTdFor(model => model.cliente.NOMBREC)
    @Html.CustomTdFor(model => model.recogidasR.GRADDEJA)
    @Html.CustomTdFor(model => model.recogidasR.GRADRECOGE)
    @Html.CustomTdFor(model => model.observa.OBSERVA)
    @Html.CustomTdFor(model => model.recogidasR.OBSERVACIONES)
    <td><a id="removeContent_@(controllerContent)_@(ViewBag.id)"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
    <td><a href="@Url.Action("edit", controlador, new { id = Model.recogidasR.ID })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
</tr>