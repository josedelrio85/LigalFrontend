@model LigalFrontend.ViewModels.ClientesEnPuntoVM


@{
    ViewBag.Title = "Edición Cliente en Punto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controlador = ViewContext.RouteData.Values["controller"].ToString();
}


@using (Html.BeginForm(null, null, FormMethod.Post, new { name = "formEdit", id = "formEdit", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(vista => vista.clientesEnPunto.ID)
    @Html.HiddenFor(vista => vista.clientesEnPunto.ROWID)

    <h2>@ViewBag.Title</h2>

    <div class="form-group">

        <div class="col-lg-6 col-sm-6">
            @Html.LabelFor(model => model.clientesEnPunto.IDPUNTO)
            @Html.DropDownListFor(model => model.clientesEnPunto.IDPUNTO, new SelectList(Model.listaPuntosRecogida, "ID", "NOMBRE"), new { @class = "form-control", })
            @Html.ValidationMessageFor(model => model.clientesEnPunto.IDPUNTO)
        </div>

        <div class="col-lg-6 col-sm-6">
            @Html.LabelFor(model => model.clientesEnPunto.IDCLIENTE)
            @Html.DropDownListFor(model => model.clientesEnPunto.IDCLIENTE, new SelectList(Model.listaClientes, "ID", "NOMBREC"), new { @class = "form-control", })
            @Html.ValidationMessageFor(model => model.clientesEnPunto.IDCLIENTE)
        </div>

        <div class="col-lg-12 col-sm-12 col-xs-12 filaBotonera">
            <input class="btn btn-default" id="botonLimpar" type="button" name="boton2" value="LIMPAR" onclick="resetForm(formEdit)" />
            <input class="btn btn-primary" id="botonGardar" type="submit" name="boton" value="GARDAR" />
            @Html.Hidden("RedirectTo", Url.Action("Index", controlador))
            <input class="btn btn-warning" id="botonCancelar" type="button" name="boton" value="CANCELAR" onclick="redirect()" />
        </div>

    </div>
}