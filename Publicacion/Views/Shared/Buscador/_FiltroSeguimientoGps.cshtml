@model LigalFrontend.ViewModels.SeguimientoGpsVM
@using LigalFrontend.Helpers;

@{
    var controlador = ViewContext.RouteData.Values["controller"].ToString();
}

<div class="row" id="limpiaFiltro">

    <div class="col-lg-3 col-sm-3 col-xs-12">
        @Html.LabelFor(vista => vista.buscador.FechaHoraVisitaI, new { @class = "" })
        @Html.DateHelperFor(vista => vista.buscador.FechaHoraVisitaI)
        @Html.ValidationMessageFor(vista => vista.buscador.FechaHoraVisitaI)
    </div>

    <div class="col-lg-3 col-sm-3 col-xs-12">
        @Html.LabelFor(vista => vista.buscador.FechaHoraVisitaF, new { @class = "" })
        @Html.DateHelperFor(vista => vista.buscador.FechaHoraVisitaF)
        @Html.ValidationMessageFor(vista => vista.buscador.FechaHoraVisitaF)
    </div>

    <div class="col-lg-3 col-sm-3 col-xs-12">
        @Html.LabelFor(vista => vista.buscador.idUsuario, new { @class = "" })
        @Html.DropDownListFor(vista => vista.buscador.idUsuario, new SelectList(Model.listaUsuarios, "ID", "NOMBRE"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(vista => vista.buscador.idUsuario)
    </div>

    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="btnFiltro">
            <input type="button" value="Limpia" onclick="resetFiltro('limpiaFiltro')" class="btn btn-warning">
            <input type="button" value="Filtra" id="filtroMapa" class="btn btn-info">
        </div>
    </div>

</div>