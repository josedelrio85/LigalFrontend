@model IEnumerable<LigalFrontend.ViewModels.ClienteVM>
@using LigalFrontend.Helpers;

@{
    var controlador = ViewContext.RouteData.Values["controller"].ToString();
}

<div class="row" id="divFiltro">

    <div class="col-lg-4 col-sm-4 col-xs-12">
        @Html.LabelFor(vista => vista.First().buscador.CODIGOC, new { @class = "" })
        @Html.TextBoxFor(vista => vista.First().buscador.CODIGOC, new { @class = "form-control" })
        @Html.ValidationMessageFor(vista => vista.First().buscador.CODIGOC)
    </div>

    <div class="col-lg-4 col-sm-4 col-xs-12">
        @Html.LabelFor(vista => vista.First().buscador.NOMBREC, new { @class = "" })
        @Html.TextBoxFor(vista => vista.First().buscador.NOMBREC, new { @class = "form-control" })
        @Html.ValidationMessageFor(vista => vista.First().buscador.NOMBREC)
    </div>

    <div class="col-lg-4 col-sm-4 col-xs-12">
        @Html.LabelFor(vista => vista.First().buscador.POBLACION, new { @class = "" })
        @Html.TextBoxFor(vista => vista.First().buscador.POBLACION, new { @class = "form-control" })
        @Html.ValidationMessageFor(vista => vista.First().buscador.POBLACION)
    </div>

    <div class="col-lg-12 col-sm-12 col-xs-12">
        <div class="btnFiltro">
            <input type="button" value="Limpia" onclick="resetFiltro('divFiltro')" class="btn btn-warning">
            <input type="button" value="Filtra" id="filtro" class="btn btn-info">
        </div>
    </div>
</div>
