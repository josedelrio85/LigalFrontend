@model LigalFrontend.ViewModels.ClienteVM

@{
    ViewBag.Title = "Nuevo Cliente ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var controlador = ViewContext.RouteData.Values["controller"].ToString();
}

