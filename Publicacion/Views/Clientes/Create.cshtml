            @Html.LabelFor(vista => vista.cliente.EMAIL, new { @class = "" })
            @Html.TextBoxFor(vista => vista.cliente.EMAIL, new { @class = "form-control" })
            @Html.ValidationMessageFor(vista => vista.cliente.EMAIL)
        </div>

        <div class="col-lg-12 col-sm-12 col-xs-12 filaBotonera">
            <input class="btn btn-default" id="botonLimpar" type="button" name="boton2" value="LIMPAR" onclick="resetForm(formEdit)" />
